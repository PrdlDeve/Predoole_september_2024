<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">





    <jaxrs:server xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
            id="service"

    address="/renew">

        <jaxrs:serviceBeans>
            <ref component-id="serviceBean" />
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="dpdp_renew.job1_tostewardship_0_2.Job1_ToStewardship.ExceptionMapper4TalendJobRestService">
                <argument ref="serviceBean" />
            </bean>
            <bean class="org.apache.cxf.jaxrs.provider.json.JSONProvider">
                <property name="ignoreNamespaces" value="true" />
                <property name="supportUnwrapped" value="false" />
                <property name="wrapperName" value="root" />
                <property name="dropRootElement" value="false" />
                <property name="convertTypesToStrings" value="false" />
                <property name="attributesToElements" value="true" />
            </bean>
            <bean class="org.apache.cxf.jaxrs.provider.dom4j.DOM4JProvider" />
        </jaxrs:providers>
        <jaxrs:features>
             <bean class="org.apache.cxf.metrics.MetricsFeature" />
        </jaxrs:features>
        <jaxrs:properties>
 
 


         </jaxrs:properties>
    </jaxrs:server>

    <bean id="serviceBean" class="dpdp_renew.job1_tostewardship_0_2.Job1_ToStewardship.RestServiceProviderImpl4TalendJob">
        <argument ref="job" />
    </bean>

    <bean id="job" class="dpdp_renew.job1_tostewardship_0_2.Job1_ToStewardship" destroy-method="destroy">
        <property name="runInTalendEsbRuntimeContainer" value="true" />

    </bean>


    <service ref="job">
        <interfaces>
            <value>routines.system.api.TalendJob</value>
        </interfaces>
        <service-properties>
            <entry key="name" value="Job1_ToStewardship" />
            <entry key="type" value="job" />
        </service-properties>
    </service>



</blueprint>
